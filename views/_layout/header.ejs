        <!-- Modals Connexion for students-->
        <div class="modal fade" id="log" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title text-center" id="exampleModalLabel">Log In to Your RetyMee Account! </h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="container text-center">
                        <div class="row">
                            <div class="col-md-12">

                                <!-- <button href="" id="facebook" class="btn btn-block btn-primary">
                                    <i class="fa fa-facebook"></i>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; Continue with Facebook
                                </button>
                                <button id="google" href="" class="btn btn-block btn-primary">
                                    <i class="fa fa-google-plus"></i>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; Continue with Google
                                </button>
                                <h6 class="py-2">OR</h6> -->
                                <form  method="post" action="/student/login" id="form-login" data-parsley-validate>
                                    <div class="form-group">
                                        <div class="input-group">
                                            <span class="input-group-addon">
                                                Your Email
                                            </span>
                                            <input type="email" id="login_email" data-parsley-errors-container="#a" name="login_email" placeholder="Email" class="form-control" data-parsley-required>
                                        </div><span class="text-danger" id="a"></span>
                                    </div>
                                    <div class="form-group">
                                        <div class="input-group">
                                            <span class="input-group-addon">
                                                Password
                                            </span>
                                            <input type="password" id="login_password" name="login_password" data-parsley-errors-container="#b" placeholder="Password" class="form-control" data-parsley-required>
                                        </div><span class="text-danger" id="b"></span>
                                    </div>
                                        <div class="container-fluid">
                                            <%- messages('messages', locals) %>
                                            <% if (errors){%>
                                                <% errors.forEach(function(error){ %>
                                                    <div class="alert alert-danger">
                                                        <%=error.msg%>
                                                    </div>
                                                <%});%>
                                            <%}%>
                                        </div>
                                        <button type="submit" id="login" class="btn btn-block btn-danger" >Log in</button>
                                </form><br>
                                <h6>or <a href="">Forget Password ?</a></h6>
                                <div class="form-check mb-2 mr-sm-2">
                                    <input class="form-check-input" type="checkbox" name="isTeatcher" id="isTeatcher" placeholder="Je suis un enseignant" value="Je suis un enseignant" />
                                    <label class="form-check-label" for="inlineFormCheck">
                                        Je suis un enseignant
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer justify-content-center">
                    <div class="row py-0">
                        <div class="col py-0">
                            <h6><strong>Don't have an account? <a href="" id="sign-in-log" data-toggle="modal" data-target="#signUp">Sign up</a> </strong></h6>
                        </div>
                    </div>
                </div>
                </div>
            </div>
        </div>

         <!-- Modals Inscription-->
        <div class="modal fade" id="signUp" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Sign Up to ReTyMee</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <div class="container text-center">
                            <div class="row">
                                <div class="col">

                                    <!-- <button href="" id="facebook" class="btn btn-block btn-primary">
                                        <i class="fa fa-facebook"></i>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; Sign Up with Facebook
                                    </button>
                                    <button id="google" href="" class="btn btn-block btn-primary">
                                        <i class="fa fa-google-plus"></i>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; Sign Up with Google
                                    </button><br> -->
                                    <form  id="form-register" data-parsley-validate>
                                        <div class="form-group">
                                            <div class="input-group">
                                                <span class="input-group-addon">
                                                    Username
                                                </span>
                                                <input type="text" id="username" data-parsley-errors-container="#aa"  placeholder="Username" name="username" class="form-control" data-parsley-required data-parsley-minlength="5" ><br>
                                            </div><span class="text-danger" id="aa"></span>
                                        </div>
                                        <div class="form-group">
                                            <div class="input-group">
                                                <span class="input-group-addon">
                                                    Your Email
                                                </span>
                                                <input type="email" name="login_email" id="email" placeholder="Email" data-parsley-errors-container="#bb" class="form-control" data-parsley-required>
                                            </div><span class="text-danger" id="bb"></span>
                                        </div>
                                        <div class="form-group">
                                            <div class="input-group">
                                                <span class="input-group-addon">
                                                    Password
                                                </span>
                                                <input type="password" id="password" data-parsley-errors-container="#cc" placeholder="Password" name="login_password" class="form-control" data-parsley-required data-parsley-minlength="6">
                                            </div><span class="text-danger" class="text-danger" id="cc"></span>
                                        </div>
                                        <div class="form-group">
                                            <div class="input-group">
                                                <span class="input-group-addon">
                                                    Confirm Password
                                                </span>
                                                <input type="password" id="password2" name="password2" data-parsley-errors-container="#dd" placeholder="Confirm Password" class="form-control" data-parsley-required  data-parsley-equalto="#password">
                                            </div><span class="text-danger" id="dd"></span>
                                        </div>
                                        <button type="submit" id="signup" class="btn btn-block btn-danger" href="#">Register <i class="fa fa-chevron-right"></i></button>
                                    </form><br>
                                    <p class="text-muted">By signing up, you agree to our Terms of Use and Privacy Policy. </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

