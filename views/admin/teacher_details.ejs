 <%- include('../_layout/adminheader') %>

<header id="main-header" class="py-2 bg-primary text-white">
    <div class="container">
      <div class="row">
        <div class="col-md-6">
          <h1>Enseignant</h1>
        </div>
      </div>
    </div>
  </header>


  <!-- INFOS -->
  <section id="edit-post" class="my-4">
    <div class="container  pb-5 mb-3" style="width: 65%;background-color: white">
      <div class="row">
        <div class="col">
          <div class="">
            <div class="col">
              <h4 class="my-4">Informations des enseignants</h4>
            </div>
            <div class="col">
                <table class="table table-striped">
                  <thead class="thead-inverse">
                    <tr>
                      <th>Options</th>
                      <th>Valeurs</th>
                    </tr>
                  </thead>
                  <tbody>  
                      <tr>
                        <td>Prénom</td>
                        <td><%=teacher.firstname%></td>
                      </tr>
                      <tr>
                        <td>Nom</td>
                        <td><%=teacher.lastname%></td>
                      </tr>
                      <tr>
                        <td>Email</td>
                        <td><%=teacher.email%></td>
                      </tr>
                      <tr>
                        <td>Nom d'utilisateur</td>
                        <td><%=teacher.username%></td>
                      </tr>
                      <tr>
                        <td>Téléphone</td>
                        <td><%=teacher.tel%></td>
                      </tr>
                      <tr>
                        <td>Adresse</td>
                        <td><%=teacher.address%></td>
                      </tr>
                      <tr>
                        <td>Matière</td>
                        <td><%=teacher.matiere%></td>
                      </tr>
                      <tr>
                        <td>À propos</td>
                        <td><%=teacher.description%></td>
                      </tr>
                      <a href="/admin/teachers/delete/<%=teacher._id%>" class="btn btn-danger mb-3">Supprimer un enseignant</a>
                  </tbody>
                </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <%- include('../_layout/adminfooter') %>