<%- include('../_layout/adminheader') %>

 <header id="main-header" class="py-2 bg-dark text-white">
    <div class="container">
      <div class="row">
        <div class="col-md-6">
          <h1>Course details</h1>
        </div>
      </div>
    </div>
  </header>


  <!-- POST EDIT -->
  <section id="edit-post" class="my-4">
    <div class="container pb-5 mb-3 " style="width: 65%;background-color: white">
      <div class="row">
        <div class="col-sm-12">
          <div class="">
            <div class="">
              <h4 class="my-4">Course details</h4>
            </div>
            <div class="">
              <table class="table table-striped">
                <thead class="thead-inverse">
                  <tr>
                    <th>Options</th>
                    <th>Value</th>
                  </tr>
                </thead>
                <tbody>  
                    <tr>
                      <td>Title</td>
                      <td><%=course.title%></td>
                    </tr>
                    <tr>
                      <td>Duration</td>
                      <td><%=course.duration%></td>
                    </tr>
                    <tr>
                      <td>Category</td>
                      <td><%=course.category%></td>
                    </tr>
                    <tr>
                      <td>Class</td>
                      <td><%=course.session%></td>
                    </tr>
                    <tr>
                      <td>Starts on</td>
                      <td><%=course.startdate%></td>
                    </tr>
                    <tr>
                      <td>Ends on</td>
                      <td><%=course.enddate%></td>
                    </tr>
                    <tr>
                      <td>Description</td>
                      <td><%=course.description%></td>
                    </tr>
                    <tr>
                      <td>Posted on</td>
                      <td><%=course.dateposted%></td>
                    </tr>
                    <a href="/admin/courses/delete/<%=course._id%>" class="btn btn-danger mb-3">Delete course</a>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
      <!-- List of students that enrhol this course -->
      <div class="row">
        <div class="col-sm-12">
          <h5 class="my-3">List of Participants</h5>
          <table class="table table-striped">
            <thead class="thead-inverse">
              <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Paid up yet?</th>
                <th>Action</th>
              </tr>
            </thead>
            <tbody>
              <%students.forEach(function(student){%>
                <tr>
                  <td><%=student.firstname%> <%=student.lastname%></td>
                  <td><%=student.email%></td>
                  <td><%=student.tel%></td>
                  <td><b><%=student.ispaid%></b></td>
                  <td><a href="/admin/students/info/<%=student.id_user%>" class="btn btn-secondary"><i class="fa fa-angle-double-right"></i> Details</a></td>
                </tr>
              <%})%>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </section>


  <%- include('../_layout/adminfooter') %>