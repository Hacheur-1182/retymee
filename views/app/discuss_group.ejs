    <section id="courses-support-section">
        <div class="container-fluid">
            <div class="accordion" id="accordionExample">
                <div class="card" style="cursor: pointer;" data-toggle="collapse" data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                  <div class="card-header" id="headingOne">
                    <h6 class="mb-0 text-center text-uppercase"><b>Supports de cours</b></h6>
                  </div>
              
                  <div id="collapseOne" class="collapse" aria-labelledby="headingOne" data-parent="#accordionExample">
