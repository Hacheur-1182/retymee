        data.append('groupId', "<%=group._id%>");
        data.append('courseId', "<%=course._id%>");
        data.append('fileType', fileType);
        data.append('date', moment().format());
        
        $.ajax({
            type: 'POST',
            url: '/file/upload',
            data: data,
            cache: false,
            contentType: false,
            processData: false,
            beforeSend: function(){
                // display loader
              $('#file-upload-loader').css('display', 'flex')
            },
            success: function(data){
