                    <h5 class="text-white mb-0">Groupe de <strong><%=group.groupname%></strong></h5>
                </div>
            </div>
        </div>
    </section>

    <div id="file-upload-loader">
        <div class="loader-wrapper">
            <div class="lds-ring"><div></div><div></div><div></div><div></div></div>
        </div>
