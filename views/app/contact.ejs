<%- include('../_layout/header') %>

   <section  class="contact-banner">
        <div class="container">
            <div id="overlay">
                <div class="row">
                    <div class="col1 col-sm-12">
                        <h1>Devenir formateur</h1>
                    </div>
                </div>
            </div>
        </div>
    </section>


    <!-- Contact section -->
    <section id="contact" class="py-3" style="z-index: -1;" >
        <div class="container">
            <div class="row">
                <div class="col-md-12  text-center">
                    <h2 class="mt-5">Êtes vous un enseignant potentiel ??</h2>
                    <h6 class="pb-5 text-muted">Écrivez-nous pour commencer à enseigner</h6>
                </div>
                <form action="/teacher/contact" method="post" enctype="multipart/form-data" data-parsley-validate style="background-image: url('/img/xero-background.jpg');background-repeat: no-repeat;;background-size: 100% 100%" class="p-5">
                    <%- include('../_layout/admin_errors') %>
                    <%- messages('messages', locals) %>
                    <div class="row text-white">
                        <div class="col-md-6">
                            <label for="input1">Prénom</label>
                            <input type="text" value="<%=firstname%>" id="input1" name="firstname" class="form-control" required placeholder="Prénom">
                        </div>
                        <div class="col-md-6">
                            <label for="input2">Nom</label>
                            <input type="text" value="<%=lastname%>" name="lastname" id="input2" required class="form-control" placeholder="Nom">
                        </div>
                        <div class="col-md-6">
                            <label for="input3">Nom d'utilisateur</label>
                            <input type="text" value="<%=username%>" id="input3" data-parsley-required data-parsley-minlength="6" required class="form-control" name="username" placeholder="Nom d'utilisateur">
                        </div>
                        <div class="col-md-6">
                            <label for="input4">Email</label>
                            <input type="email" value="<%=email%>" name="email" id="input4" required class="form-control" placeholder="Email">
                        </div>
                        <div class="col-md-6">
                            <label for="input5">Téléphone</label>
                            <input type="text" value="<%=tel%>" name="tel" id="input5" class="form-control" required placeholder="Téléphone">
                        </div>
                        <div class="col-md-6">
                            <label for="input6">Adresse</label>
                            <input type="text" value="<%=lastname%>" name="address" id="input6" class="form-control" placeholder="Adresse">
                        </div>
                        <div class="col-md-6 form-group date" data-provide="datepicker">
                            <label for="input7">Ville</label>
                            <input type="text" value="<%=ville%>" name="ville" id="input7" class="form-control" placeholder="Ville">
                        </div>
                        <div class="col-md-6">
                            <label for="input8">Date de Naissance</label>
                            <input type="text" value="<%=lastname%>" name="bornat" id="input8" class="form-control" placeholder="26/12/1999">
                        </div>
                        <div class="col-md-6">
                            <label for="input9">Sexe</label><br>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" name="sex" id="exampleRadios1" value="Male" checked>
                                <label class="form-check-label" for="exampleRadios1">
                                    Masculin
                                </label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" name="sex" id="exampleRadios2" value="Female">
                                <label class="form-check-label" name="sex" for="exampleRadios2">
                                    Féminin
                                </label>
                            </div>
                        </div>
                        <div class="col-md-6 my-1">
                            <label for="inputState1">Matière à enseigner</label>
                            <input type="text" name="matiere" placeholder="Votre matière" class="form-control" id="inputState1" required value="<%=matiere%>" >
                        </div>
                        <div class="col-md-6 my-1">
                            <div class="custom-file">
                                <label class="custom-file-label" for="customFile">Choisissez une image</label>
                                <input value="<%=image%>" type="file" name="image" class="custom-file-input" id="customFile">
                            </div>
                        </div>
                        <div class="col-md-12 my-4 form-group">
                            <label for="exampleFormControlTextarea1">À propos de vous <i>(Exemple : mon école, mon niveau)</i></label>
                            <textarea required="" class="form-control" name="about" id="exampleFormControlTextarea1" rows="3"><%=about%></textarea>
                        </div>
                        <div class="col-md-12 py-1">
                            <input type="submit" class="btn btn-danger  float-right ml-3" value="Envoyer">
                            <input type="submit" class="btn  float-right" value="Annuler">
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </section>


<%- include('../_layout/footer') %>