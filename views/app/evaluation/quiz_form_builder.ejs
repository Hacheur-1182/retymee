<%- include('../../_layout/dashboard-header') %>

    <section id="header" style="margin-left: 3em">
        <div class="container-fluid py-4">
            <div class="row pt-3 pb-2">
                <div class="col-md-12 text-center d-flex justify-content-center align-items-center">
                    <%if(user.image != "avatar.png"){%>
                        <img src="/img/student_images/<%=user._id%>/<%=user.image%>" class="img-rounded" alt="">
                    <%}else{%>
                        <img src="/img/avatar.png" class="img-rounded" alt="">
                    <%}%>
                    <div class="d-flex flex-column justify-content-center align-items-center">
                        <%if(user.firstname != ""){%>
                            <p class="text-white ml-4 mb-0"><b><%=user.email%></b></p>
                        <%}%>
                        
                        <p class="text-white ml-4 mb-0"><b><%=user.email%></b></p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <div id="file-upload-loader">
        <div class="loader-wrapper">
            <div class="lds-ring"><div></div><div></div><div></div><div></div></div>
        </div>
    </div>
    
    <% if (teacher.courses.length > 0){ %>
        <section id="quiz-builder" class="py-5">
            <div class="container-fluid">
                <div class="row my-3">
                    <div class="col-sm-12">
                        <a href="/quiz" class="pb-0 mb-0"><i class="fa fa-arrow-left"></i> Gestion des évaluations</a>
                        <h4 class="pb-0 mb-0 mt-3">CREATION D'UNE EVALUATION</h4>
                        <hr/>
                    </div>
                    <div class="col-sm-12">
                        <div class="form">
                            <div class="row">
                                <div class="col-sm-12">
                                    <div class="form-group">
                                        <label for="disabledSelect">Choisir le cours correspondant</label>
                                        <select id="disabledSelect" name="courseTitle" class="form-control">
                                            <% teacher.courses.forEach(function(course){ %>
                                                <option value="<%=course.title%>:<%=course.course_id%>"><%=course.title%></option>
                                            <%});%>
                                        </select>
                                      </div>
                                </div>
                                <div class="col-sm-8">
                                    <div class="form-group">
                                        <label for="title">Titre du Quiz</label>
                                        <input type="text" name="title" class="form-control" id="title" placeholder="Titre du Quiz">
                                    </div>
                                </div>
                                <div class="col-sm-2">
                                    <div class="form-group">
                                        <label for="startat">Date de Début</label>
                                        <input type="text" name="startat" class="form-control" id="startat" placeholder="Début">
                                    </div>
                                </div>
                                <div class="col-sm-2">
                                    <div class="form-group">
                                        <label for="endat">Date de Fin</label>
                                        <input type="text" name="endat" class="form-control" id="endat" placeholder="Fin">
                                    </div>
                                </div>
                            </div>
                            
                            <div class="builder">
                                <div class="row mt-3">
                                    <div class="col-sm-10">
                                        <div class="form-group">
                                            <input type="text" name="question" class="form-control" id="question" placeholder="Libellé de la question">
                                        </div>
                                    </div>
                                    <div class="col-sm-2">
                                        <div class="form-group">
                                            <input type="number" name="mark" class="form-control" id="mark" placeholder="Nombre de points">
                                        </div>
                                    </div>
                                </div>

                                
                                <div class="row">
                                    <div class="col-sm-10">
                                        <label for="re">Réponses possibles</label>
                                    </div>
                                    <div class="col-sm-10">
                                        <div class="form-group">
                                            <input type="text" name="reponse" class="form-control" placeholder="Entrez une réponse">
                                        </div>
                                    </div>
                                    <div class="col-sm-2">
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" class="trueResponse">
                                            <label class="form-check-label">
                                              <i class="fa fa-check"></i>
                                            </label>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-10">
                                        <div class="form-group">
                                            <input type="text" name="reponse" class="form-control" placeholder="Entrez une réponse">
                                        </div>
                                    </div>
                                    <div class="col-sm-2">
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" class="trueResponse">
                                            <label class="form-check-label">
                                              <i class="fa fa-check"></i>
                                            </label>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-10">
                                        <div class="form-group">
                                            <input type="text" name="reponse" class="form-control" placeholder="Entrez une réponse">
                                        </div>
                                    </div>
                                    <div class="col-sm-2">
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" class="trueResponse">
                                            <label class="form-check-label">
                                              <i class="fa fa-check"></i>
                                            </label>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-10">
                                        <div class="form-group">
                                            <input type="text" name="reponse" class="form-control" placeholder="Entrez une réponse">
                                        </div>
                                    </div>
                                    <div class="col-sm-2">
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" class="trueResponse">
                                            <label class="form-check-label">
                                              <i class="fa fa-check"></i>
                                            </label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="validation">
                                <div class="row">
                                    <div class="col-sm-12 d-flex justify-content-between">
                                        <button class="btn btn-sm btn-dark" id="add-response">Ajouter une réponse</button>
                                        <button class="btn button-yellow" id="add-question">Ajouter la Question</button>
                                    </div>
                                </div>
                            </div>
                            <div class="complete-form">
                                <div class="elements">
    
                                </div>
                                <div class="row">
                                    <div class="col-sm-12 d-flex justify-content-end">
                                        <button class="btn button-yellow mt-4" id="submit">Enregistrer et Créer</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    <%}else {%>
        <h5 class="text-center">Vous ne dispensez aucun cours.</h5>
    <%}%>


