<%- include('../../_layout/dashboard-header') %>

    <section id="header" style="margin-left: 3em">
        <div class="container-fluid py-4">
            <div class="row pt-3 pb-2">
                <div class="col-md-12 text-center d-flex justify-content-center align-items-center">
                    <%if(user.image != "avatar.png"){%>
                        <img src="/img/student_images/<%=user._id%>/<%=user.image%>" class="img-rounded" alt="">
                    <%}else{%>
                        <img src="/img/avatar.png" class="img-rounded" alt="">
                    <%}%>
                    <div class="d-flex flex-column justify-content-center align-items-center">
                        <%if(user.firstname != ""){%>
                            <p class="text-white ml-4 mb-0"><b><%=user.email%></b></p>
                        <%}%>
                        
                        <p class="text-white ml-4 mb-0"><b><%=user.email%></b></p>

                    </div>
                </div>
            </div>
        </div>
    </section>
    

    <section id="quiz-results" class="py-5">
        <div class="container-fluid">
            <div class="row my-3">
                <div class="col-sm-12">
                    <a href="/quiz" class="pb-0 mb-0"><i class="fa fa-arrow-left"></i> Gestion des évaluations</a>
                    <h4 class="pb-0 mb-0 mt-3">RESULTATS</h4>
                </div>
            </div>

            <div class="row mt-2" id="pagecontent">
                <div class="col-sm-12 mt-3">
                    <h4>Résultats: <%=quiz.title%></h4>
                </div>
                <div class="col-sm-12 mt-4">
                    <table class="table">
                        <thead class="thead-dark">
                            <tr>
                            <th scope="col">#</th>
                            <th scope="col">Nom</th>
                            <th scope="col">Email</th>
                            <th scope="col">Note</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% results.forEach(function(result, i){ %>
                                <tr>
                                    <th scope="row"><%=(i+1)%></th>
                                    <td><%=result.username%></td>
                                    <td><%=result.email%></td>
                                    <td><b><%=result.total%></b></td>
                                </tr>
                            <%});%>
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="row justify-content-end">
                <div class="col-sm-12 d-flex justify-content-end"><button class="btn button-yellow" id="print">IMPRIMER</button></div>
            </div>
        </div>
    </section>


    <%- include('../../_layout/dashboard-footer')%>