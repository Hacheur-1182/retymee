<%- include('../_layout/header') %>

    <section class="courses-banner">
        <div class="container" >
            <div id="overlay">
                <div class="row">
                    <div class="col1 col-md-10  col-lg-8 col1 col-sm-12">
                        <h1>Développez vos aptitudes</h1>
                        <h4 class="d-none d-md-block d-lg-block d-xl-block">Nous proposons aux étudiants, aux élèves et aux professionnels,
                            une aide aux cours et apprentissage en ligne.</h4>
                            <a href="#to" class="btn button-yellow my-2 btn-lg">Enregistrez vous à un cours maintenant</a>
                    </div>
                </div>
            </div>
        </div>
    </section>

   <!-- Ongoing Prepa Courses Section -->
    <section id="ongoing-courses-concours" class="py-3" style="z-index: -1;">
        <div class="container">
                <h2 id="to" class="display-5  mb-5 mt-5 text-center"><strong>Tous les cours</strong><hr></h2>
            <div class="row mb-4">
                <%courses.forEach(function(course){%>
                    <div class="col-md-6 col-lg-3 col-sm-10 my-2">
                        <div class="card">
                            <img class="card-img-top" src="/img/course_images/<%=course._id%>/<%=course.image%>" class="img-fluid" height="150" alt="Card image cap">
                            <center>
                                <div id="view-details" class="text-center">
                                    <a href="/course/<%=course._id%>" ><i class="fa fa-search"></i></a>
                                </div>
                            </center>
                            <div class="card-block pt-0">
                                <a href="/course/<%=course._id%>" class="text-dark" ><h5 class="card-title"><%=course.title%></h5></a>
                                <span class="text-muted">Classe: <%=course.session%></span><br>
                                <span class="text-muted">Durée: <%=course.duration%></span>
                                <p class="card-text">
                                    <small>
                                        <span class="fa fa-star checked"></span>
                                        <span class="fa fa-star checked"></span>
                                        <span class="fa fa-star checked"></span>
                                        <span class="fa fa-star checked"></span>
                                        <span class="fa fa-star"></span>&nbsp;
                                        (122 revues)
                                    </small>
                                </p>
                            </div>
                        </div>
                    </div>
                <%})%>
            </div>
        </div>
    </section>


<%- include('../_layout/footer') %>