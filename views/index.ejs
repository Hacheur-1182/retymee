    <!-- Ongoing Prepa Courses Section -->
    <section id="ongoing-courses-concours" class="py-3" style="z-index: -1;">
        <div class="container">
                <h2 class="display-5  mb-5 mt-5"><strong>Cours à la une</strong></h2>
            <div class="row mb-4">
                <%courses.forEach(function(course){%>
                    <div class="col-md-6 col-lg-3 col-sm-10 my-2">
                        <div class="card">
                            <img class="card-img-top" src="/img/course_images/<%=course._id%>/<%=course.image%>" class="img-fluid" height="150" alt="Card image cap">
                            <center>
                                <div id="view-details" class="text-center">
                                    <a href="/course/<%=course._id%>" ><i class="fa fa-search"></i></a>
                                </div>
                            </center>
                            <div class="card-block pt-0">
                                <h5 class="card-title"><%=course.title%></h4>
                                <!-- <p class="card-text"><%=course.description%></p> -->
                                <span class="text-muted">Classe: <%=course.session%></span><br>
                                <span class="text-muted">Durée: <%=course.duration%></span>
                                <p class="card-text mt-2">
                                    <small>
                                        <span class="fa fa-star checked"></span>
                                        <span class="fa fa-star checked"></span>
                                        <span class="fa fa-star checked"></span>
                                        <span class="fa fa-star checked"></span>
                                        <span class="fa fa-star"></span>&nbsp;
                                        (0 revues)
                                    </small>
                                </p>
                            </div>
                        </div>
                    </div>
                <%})%>
            </div>
            <center><a href="/prepa-courses" id="all-prepa-courses" class="btn btn-lg mt-3">Parcourir plus de cours</a></center>
        </div>
    </section>


